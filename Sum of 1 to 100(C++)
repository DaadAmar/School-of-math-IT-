#include <iostream>
using namespace std;

//This program uses the FOR function.

int main() 
{
   int a ,x;
   x=0;
  for(int a=1;a<=100;a++)
  {
    x=x+a;
  }
  cout<< "The sum of numbers from 1 to 100 = " ; 
  cout << x;
}

//This program uses the WHILE function

int main() 
{
  int a,x;
  x=0;
  a=1;
  while(a<=100)
    {
      x=x+a;
      a=a+1;
    }
  cout<< "The sum of numbers from 1 to 100 = " ;
  cout<<x;
}

