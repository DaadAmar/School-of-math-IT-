#include <iostream>
using namespace std ;

//This program uses the FOR function.

int main() 
{
  int x,y,z;
  z=0;
  cout<<"        Sum of 5 numbers!\n";
  for(int x=1;x<=5;x++)
    {
      cout<<"\n Enter a number: ";
      cin>>y;
      z=z+y;
    }
  cout<<"\n The sum of the five numbers above = ";
  cout<< z;
}

//This program uses the while function.

int main() {
  int z,x,y;
  y=1;
  z=0;
  cout<<"        Sum of 5 numbers!\n";
  while(y<=5)
    {
      cout<<"\n Enter a number: ";
      cin>>x;
      z=z+x;
      y=y+1;
    }
   cout<<"\n The sum of the five numbers above = ";
  cout<< z; 
}
